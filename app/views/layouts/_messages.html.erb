<div id="alert" class="w-full max-w-xl">
<% if(flash.any?) %>
    <% flash.each do |name, msg| %> 
        <div data-controller="alert" class="mt-5">
            <div class="container flex mx-auto text-sm p-4 mb-4 <%= alert_class(name) %>" role="alert" data-alert-target="alert">
                <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd">
                    </path>
                </svg>
                <span class="sr-only">Info</span>
                <div>
                    <% if name != "info" %>
                        <%= msg %>
                    <% else %>
                        <%= msg[:message] %>
                        <%= link_to msg[:label], msg[:link], class: 'text-blue-600 underline dark:text-blue-500 hover:underline' %>
                    <% end %>
                </div>
                <button type="button" class="ml-auto -mx-1.5 -my-1.5 <%= dismiss_button_class(name) %>" data-dismiss-target="#alert" aria-label="Close" data-alert-target="close">
                    <span class="sr-only">Dismiss</span>
                    <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                </button>
            </div>
        </div>
    <% end %>
<% end %>
</div>